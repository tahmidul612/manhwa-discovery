# Backend Configuration
PORT=8000
DEBUG=false

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=manhwa_discovery

# Redis Cache
REDIS_URL=redis://localhost:6379

# API Keys
